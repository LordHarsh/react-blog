{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "src/**/*",
      "use": {
        "builder": "@vercel/static-build",
        "config": {
          "distDir": "build",
          "cmd": "npm run build"
        }
      }
    }
  ],
  "routes": [
    {
      "src": "/blogs/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
